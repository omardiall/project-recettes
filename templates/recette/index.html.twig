{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center my-4">
        <h1 class="display-4">Recettes</h1>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <a href="{{ path('recette_new') }}" class="btn btn-success">Add New Recipe</a>
    </div>

    <div class="list-group">
        {% for recette in recettes %}
            <div class="list-group-item">
                <h5>{{ recette.nom }}</h5>
                <p>Duration: {{ recette.dureeTotale }} minutes</p>
                <div class="d-flex">
                    <a href="{{ path('recette_show', {'id': recette.id}) }}" class="btn btn-primary btn-sm me-2">Show</a>
                    <a href="{{ path('recette_edit', {'id': recette.id}) }}" class="btn btn-warning btn-sm me-2">Edit</a>
                    <form method="post" action="{{ path('recette_delete', {'id': recette.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
