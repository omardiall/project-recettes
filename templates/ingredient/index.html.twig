{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center my-4">
        <h1 class="display-4">Ingredients</h1>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <a href="{{ path('ingredient_new') }}" class="btn btn-success">Add New Ingredient</a>
    </div>

    <div class="list-group">
        {% for ingredient in ingredients %}
            <div class="list-group-item">
                <h5>{{ ingredient.nom }}</h5>
                <div class="d-flex">
                    <a href="{{ path('ingredient_show', {'id': ingredient.id}) }}" class="btn btn-primary btn-sm me-2">Show</a>
                    <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-warning btn-sm me-2">Edit</a>
                    <form method="post" action="{{ path('ingredient_delete', {'id': ingredient.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
