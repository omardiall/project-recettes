{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center my-4">
        <h1 class="display-4">Ingredient Details</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Name: {{ ingredient.nom }}</h5>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('ingredient_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-warning">Edit</a>
        </div>
    </div>
{% endblock %}
